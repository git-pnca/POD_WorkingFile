<Window x:Class="PodDesignPlugin.PowderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Standard Powder Pod" Height="520" Width="500">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Select Powder Size:" />
            <ComboBox Name="DropdownSize" IsReadOnly="True">
                <ComboBoxItem Content="1600 x 1450"/>
                <ComboBoxItem Content="1800 x 1350"/>
            </ComboBox>

            <TextBlock Text="Select Powder Door Opening:" Margin="0,10,0,0"/>
            <ComboBox Name="DropdownDoorOpening" IsReadOnly="True">
                <ComboBoxItem Content="Position A"/>
                <ComboBoxItem Content="Position B"/>
            </ComboBox>

            <!-- Image that updates based on dropdown selections -->
            <Grid Width="400" Height="300" Margin="20">
                <Grid.Background>
                    <ImageBrush/>
                </Grid.Background>
                <Image x:Name="P1B2" Source="/PodDesignPlugin;component/Resource/P1B2.png" Visibility="Collapsed" Stretch="Uniform" Width="400" Height="300" />
                <Image x:Name="P2A2" Source="/PodDesignPlugin;component/Resource/P2A2.png" Visibility="Collapsed" Stretch="Uniform" Width="400" Height="300"/>
                <Image x:Name="P2B2" Source="/PodDesignPlugin;component/Resource/P2B2.png" Visibility="Collapsed" Stretch="Uniform" Width="400" Height="300"/>
                <Image x:Name="P1A2" Source="/PodDesignPlugin;component/Resource/P1A2.png" Visibility="Collapsed" Stretch="Uniform" Width="400" Height="300"/>
            </Grid>

            <Button Name="DownloadButton"
                    Content="Download File"
                    Margin="0,10,0,0"
                    Click="DownloadButton_Click"/>

        </StackPanel>
            </Grid>
</Window>
