<Window x:Class="PodDesignPlugin.MaidLWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Standard 'L' Maid Pod" Height="550" Width="500">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text=" 'L' Maid Size : 2200 x 1500" Margin="0,10,0,0" HorizontalAlignment="Center" FontSize="14" />

            <TextBlock Text="Select 'L' Maid Door Opening:" Margin="0,10,0,0"/>
            <ComboBox Name="DropdownDoorOpening" IsReadOnly="True">
                <ComboBoxItem Content="Position A"/>
                <ComboBoxItem Content="Position B"/>
            </ComboBox>

            <!-- Image that updates based on dropdown selections -->
            <Grid Width="400" Height="350" Margin="10">
                <Image x:Name="M3A" Source="/PodDesignPlugin;component/Resource/M3A.png" Visibility="Collapsed" Stretch="Uniform" Width="400" Height="350" />
                <Image x:Name="M3B" Source="/PodDesignPlugin;component/Resource/M3B.png" Visibility="Collapsed" Stretch="Uniform" Width="400" Height="350" />
            </Grid>

            <Button Name="DownloadButton"
                    Content="Download File"
                    Margin="0,20,0,0"
                    Click="DownloadButton_Click"/>

        </StackPanel>
        
    </Grid>
</Window>
