<Window x:Class="PodDialog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="POD Configuration" Height="500" Width="400">
<Grid Margin="10">
<Grid.RowDefinitions>
<RowDefinition Height="Auto"/>
<RowDefinition Height="Auto"/>
<RowDefinition Height="Auto"/>
<RowDefinition Height="Auto"/>
<RowDefinition Height="200"/>
<RowDefinition Height="Auto"/>
</Grid.RowDefinitions>
 
        <!-- POD Types -->
<StackPanel Margin="0,5">
<TextBlock Text="POD Types" />
<ComboBox x:Name="PodTypeComboBox" Width="200" Margin="0,2">
<ComboBoxItem Content="Type A"/>
<ComboBoxItem Content="Type B"/>
<ComboBoxItem Content="Type C"/>
</ComboBox>
</StackPanel>
 
        <!-- POD Size -->
<StackPanel Grid.Row="1" Margin="0,5">
<TextBlock Text="POD Size" />
<ComboBox x:Name="PodSizeComboBox" Width="200" Margin="0,2">
    <ComboBoxItem Content="Size A"/>
    <ComboBoxItem Content="Size B"/>
    <ComboBoxItem Content="Size C"/>
           </ComboBox>
        </StackPanel>
 
        <!-- Door Opening -->
<StackPanel Grid.Row="2" Margin="0,5">
<TextBlock Text="Door Opening" />
            <ComboBox x:Name="PodSizeComboBox" Width="200" Margin="0,2">
                <ComboBoxItem Content="Size A"/>
                <ComboBoxItem Content="Size B"/>
                <ComboBoxItem Content="Size C"/>
            </ComboBox>
        </StackPanel>
 
        <!-- Shaft Size -->
<StackPanel Grid.Row="3" Margin="0,5">
<TextBlock Text="Shaft Size" />
<TextBox x:Name="ShaftSizeTextBox" Width="200" Margin="0,2"/>
</StackPanel>
 
        <!-- Preview -->
<Border Grid.Row="4" BorderBrush="Black" BorderThickness="1" CornerRadius="10" Margin="0,10">
<Grid HorizontalAlignment="Center" VerticalAlignment="Center">
<TextBlock Text="Preview" HorizontalAlignment="Center" VerticalAlignment="Center"/>
</Grid>
</Border>
 
        <!-- Buttons -->
<StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
<Button Content="Download" Width="80" Margin="5" Click="Download_Click"/>
<Button Content="Cancel" Width="80" Margin="5" Click="Cancel_Click"/>
</StackPanel>
 
        <!-- Logo -->
<TextBlock Text="PWC Logo" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Grid.Row="5"/>
</Grid>
</Window>