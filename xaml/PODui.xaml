<Window x:Class="PodDesignPlugin.PODui"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="POD Designer | PNCA® Tools" Height="850" Width="500" >
    <Grid Margin="10,10,10,6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="500"/>
            <RowDefinition Height="45.36"/>
            <RowDefinition Height="14.64"/>

        </Grid.RowDefinitions>

        <!-- POD Types -->
        <StackPanel Margin="0,5,0,5">
            <TextBlock Text="POD Types"/>
            <ComboBox x:Name="PodTypeComboBox" Width="250" Margin="0,2,0,5" HorizontalAlignment="Center" >
                <ComboBoxItem Content="Shower Type" />
                <ComboBoxItem Content="Powder Type" />
                <ComboBoxItem Content="MaidSQ Type" />
                <ComboBoxItem Content="MaidL Type"/>
            </ComboBox>
        </StackPanel>

        <!-- POD Size -->
        <StackPanel Grid.Row="1" Margin="0,5,0,5">
            <TextBlock Text="POD Sizes" />
            <ComboBox x:Name="PodSizeComboBox" Width="250" Margin="0,2,0,5">
                <ComboBoxItem Content="2600 x 1600"/>
                <ComboBoxItem Content="2850 x 1600"/>
                <ComboBoxItem Content="3000 x 1600"/>
                <ComboBoxItem Content="1600 x 1450"/>
                <ComboBoxItem Content="1600 x 1350"/>
                <ComboBoxItem Content="1850 x 1650"/>
                <ComboBoxItem Content="2200 x 1500"/>
            </ComboBox>
        </StackPanel>

        <!-- Door Opening -->
        <StackPanel Grid.Row="2" Margin="0,5,0,5">
            <TextBlock Text="Door Openings"  VerticalAlignment="Top" Margin="0,0,0,2"/>
            <ComboBox x:Name="DoorOpeningComboBox" Width="250" Margin="0,2,0,5">
                <ComboBoxItem Content="Position A"/>
                <ComboBoxItem Content="Position B"/>
            </ComboBox>
        </StackPanel>

        <!-- Shaft Size -->
        <StackPanel Grid.Row="3" Margin="0,5,0,5">
            <TextBlock Text="Shaft Openings" VerticalAlignment="Top" Margin="0,0,0,2"/>
            <ComboBox x:Name="ShaftOpeningComboBox" Width="250" Margin="0,2,0,5">
                <ComboBoxItem Content="1000 x 450"/>
                <ComboBoxItem Content="1000 x 260"/>
            </ComboBox>
        </StackPanel>

        <!-- Preview -->
        <Border Grid.Row="4" BorderBrush="Black" BorderThickness="1" CornerRadius="10" Margin="0,10,0,10">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="PlaceholderText" Text="Please select options to preview the pod" HorizontalAlignment="Center" VerticalAlignment="Center" FontStretch="Expanded" FontStyle="Italic"/>
                <Image x:Name ="S21A2" Grid.Row="4" Source="/PodDesignPlugin;component/Resource/S21A2.png" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                <Image x:Name ="S21B2" Grid.Row="4" Source="/PodDesignPlugin;component/Resource/S21B2.png" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                <Image x:Name ="S22A2" Grid.Row="4" Source="/PodDesignPlugin;component/Resource/S22A2.png" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                <Image x:Name ="S22B2" Grid.Row="4" Source="/PodDesignPlugin;component/Resource/S22B2.png" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                <Image x:Name ="S31A2" Grid.Row="4" Source="/PodDesignPlugin;component/Resource/S31A2.png" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                <Image x:Name ="S31B2" Grid.Row="4" Source="/PodDesignPlugin;component/Resource/S31B2.png" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                <Image x:Name ="S32A2" Grid.Row="4" Source="/PodDesignPlugin;component/Resource/S31B2.png" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                <Image x:Name ="S32B2" Grid.Row="4" Source="/PodDesignPlugin;component/Resource/S32A2.png" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                <Image x:Name ="S41A2" Grid.Row="4" Source="/PodDesignPlugin;component/Resource/S41A2.png" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                <Image x:Name ="S41B2" Grid.Row="4" Source="/PodDesignPlugin;component/Resource/S41B2.png" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                <Image x:Name ="S42A2" Grid.Row="4" Source="/PodDesignPlugin;component/Resource/S42A2.png" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                <Image x:Name ="S42B2" Grid.Row="4" Source="/PodDesignPlugin;component/Resource/S42A2.png" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                <Image x:Name ="P1A2" Grid.Row="4" Source="/PodDesignPlugin;component/Resource/P1A2.png" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" />
                <Image x:Name ="P1B2" Grid.Row="4" Source="/PodDesignPlugin;component/Resource/P1B2.png" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                <Image x:Name ="P2A2" Grid.Row="4" Source="/PodDesignPlugin;component/Resource/P2A2.png" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                <Image x:Name ="P2B2" Grid.Row="4" Source="/PodDesignPlugin;component/Resource/P2B2.png" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                <Image x:Name ="M1A" Grid.Row="4" Source="/PodDesignPlugin;component/Resource/M1A.png" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                <Image x:Name ="M1B" Grid.Row="4" Source="/PodDesignPlugin;component/Resource/M1B.png" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                <Image x:Name ="M3A" Grid.Row="4" Source="/PodDesignPlugin;component/Resource/M3A.png" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                <Image x:Name ="M3B" Grid.Row="4" Source="/PodDesignPlugin;component/Resource/M3B.png" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>

            </Grid>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Grid.RowSpan="2">
            <Button Content="Download" Width="80" Margin="0,0,20,10" Click="Download_Click" />
            <Button Content="Cancel" Height ="30" Width="80" Click="Cancel_Click" Margin="0,0,20,10" />
        </StackPanel>



        <!-- Logo -->
        <Image Source="/PodDesignPlugin;component/Resource/PNC logo.png"
       Width="60" Height="50"
       HorizontalAlignment="Right"
       VerticalAlignment="Center"
       Margin="0,0,10,10"
       Grid.Row="5" Grid.RowSpan="2"/>


    </Grid>
</Window>